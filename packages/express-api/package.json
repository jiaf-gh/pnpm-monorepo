{
  "name": "@pnpm-monorepo/express-api",
  "type": "module",
  "version": "0.0.1",
  "description": "A REST API using ExpressJS.",
  "main": "./dist/server.mjs",
  "scripts": {
    "build": "pkgroll --clean-dist --sourcemap",
    "build:prepare": "tsoa spec-and-routes",
    "dev": "conc \"nodemon --watch src -e ts --exec tsoa spec-and-routes\" \"tsx watch --exclude \"./generated/**/*\" --clear-screen=false src/server.ts\"",
    "start": "node dist/server.mjs",
    "lint": "eslint .",
    "lint:fix": "eslint --fix ."
  },
  "dependencies": {
    "@pnpm-monorepo/models": "workspace:*",
    "@tsoa/runtime": "^6.6.0",
    "express": "^5.1.0",
    "morgan": "^1.10.0",
    "swagger-ui-express": "^5.0.1",
    "tsoa": "^6.6.0"
  },
  "devDependencies": {
    "@types/express": "^5.0.1",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.11.17",
    "@types/swagger-ui-express": "^4.1.8",
    "concurrently": "^9.1.2",
    "eslint": "^9.20.1",
    "nodemon": "^3.1.9",
    "pkgroll": "^2.10.0",
    "tsx": "^4.7.1",
    "typescript": "^5.7.3"
  }
}
